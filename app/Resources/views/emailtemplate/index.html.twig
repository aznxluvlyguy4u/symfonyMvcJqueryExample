{% extends 'AppBundle:AdminLTE:base.html.twig' %}

{% block body %}
    {% embed 'AppBundle:AdminLTE:_content.html.twig' %}
        {% block content %}
            <h1>Emailtemplates list</h1>

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Subject</th>
                        <th>Body</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for emailTemplate in emailTemplates %}
                    <tr>
                        <td><a href="{{ path('emailtemplate_show', { 'id': emailTemplate.id }) }}">{{ emailTemplate.id }}</a></td>
                        <td>{{ emailTemplate.subject }}</td>
                        <td>{{ emailTemplate.body }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('emailtemplate_show', { 'id': emailTemplate.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('emailtemplate_edit', { 'id': emailTemplate.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('emailtemplate_new') }}">Create a new emailTemplate</a>
                </li>
            </ul>
        {% endblock %}
    {% endembed %}
{% endblock %}

