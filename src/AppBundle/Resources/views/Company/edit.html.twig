{% extends 'AppBundle:AdminLTE:base.html.twig' %}

{% block body %}
    {% embed 'AppBundle:AdminLTE:_content.html.twig' %}
        {% block content %}
            <div class="row">

                <div class="col-md-6">

                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Editting "{{company.companyName}}"</h3>
                        </div>
                        {{form_start(form)}}
                        <div class="box-body">
                            {{form_row(form.contactFirstname)}}
                            {{form_row(form.contactLastname)}}
                            {{form_row(form.companyName)}}
                            {{form_row(form.sector)}}
                            {{form_row(form.numberOfEmployees)}}
                            {{form_row(form.squareMetersWanted)}}
                            {{form_row(form.email)}}
                            {{form_row(form.phone)}}
                            {{form_row(form.address)}}
                            {{form_row(form.zipcode)}}
                            {{form_row(form.city)}}
                            {{form_row(form.websiteUrl)}}
                            {{form_row(form.status)}}
                            {{form_row(form.reference)}}
                            {{form_row(form.offer)}}
                            {{form_row(form.demand)}}
                            <div class="form-group pull-right">
                                {{form_widget(form.save)}}
                                {{form_widget(form.saveAndQuit, {'attr': {'class': 'btn-primary'}})}}
                            </div>
                        </div>
                        {{form_end(form)}}
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Notes on "{{company.companyName}}"</h3>
                        </div>
                        <div class="box-body">
                            {% for comment in company.comments %}
                                <blockquote>
                                    {{comment.text|raw}}
                                    <small>
                                        {{comment.createdBy.username}} @ {{comment.createdAt|date('Y-m-d H:i')}}
                                    </small>
                                </blockquote>
                            {% endfor %}
                        </div>
                        <div class="box-footer">
                            {{form_start(companyCommentForm)}}
                            {{form_row(companyCommentForm.text, {'attr': {'class': 'wysihtml5'}})}}

                            <div class="form-group pull-right">
                                {{form_widget(companyCommentForm.save)}}
                                {{form_widget(companyCommentForm.saveAndQuit, {'attr': {'class': 'btn-primary'}})}}
                            </div>

                            {{form_end(companyCommentForm)}}
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="/js/wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script>
        $('.wysihtml5').wysihtml5();
    </script>
{% endblock javascripts %}

{% block stylesheets %}
    {{ parent() }}
        <link rel="stylesheet" href="/css/wysihtml5/bootstrap3-wysihtml5.min.css">
{% endblock %}
