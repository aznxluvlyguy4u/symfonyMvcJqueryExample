{% extends 'AppBundle:AdminLTE:base.html.twig' %}

{% block body %}
    {% embed 'AppBundle:AdminLTE:_content.html.twig' %}
        {% block content %}
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List of People</h3>
                </div>
                <div class="box-body">
                    <table id="profiles" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Pass Number</th>
                                <th>Company</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for profile in profiles %}
                                <tr>
                                    <td>{{profile.firstname}} {{profile.lastname}}</td>
                                    <td>{{profile.passnumber}}</td>
                                    <td>
                                        {% for company in profile.companies %}
                                            <a href="{{ path('app_company_edit', {'company': company.id}) }}" class="btn btn-primary btn-flat btn-sm">{{company.name}}</a>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <a class="btn btn-default btn-flat" href="{{ path('app_profile_edit', {'profile' : profile.id}) }}">
                                            <i class="fa fa-fw fa-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger btn-flat" href="{{ path('app_profile_delete', {'profile' : profile.id}) }}">
                                            <i class="fa fa-fw fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="/js/datatables/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/js/datatables/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $('#profiles').DataTable({
            "paging": true,
            "pageLength" : 25,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    </script>
{% endblock javascripts %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/datatables/dataTables.bootstrap.css">
{% endblock %}
