<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>

            {# Dashboard #}
            <li class="{% if app.request.attributes.get('_route') starts with 'app_dashboard_index' %} active{% endif %}">
                <a href="{{path('app_dashboard_index')}}">
                    <i class="fa fa-dashboard"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            {% if is_granted('ROLE_SUPER_ADMIN') %}
            <li class="{% if app.request.attributes.get('_route') starts with 'app_dashboard_funnel' %} active{% endif %}">
                <a href="{{path('app_dashboard_funnel')}}">
                    <i class="fa fa-tasks"></i>
                    <span>Sales Funnel</span>
                </a>
            </li>
            {% endif %}

            {# Companies #}
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <li class="treeview{% if app.request.attributes.get('_route') starts with 'app_company' %} active{% endif %}">
                    <a href="#">
                        <i class="fa fa-building-o"></i>
                        <span>Companies</span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="{% if app.request.attributes.get('_route') == 'app_company_index' %}active{% endif %}">
                            <a href="{{ path('app_company_index') }}">
                                <i class="fa fa-list"></i>
                                List companies</a>
                        </li>
                        <li class="{% if app.request.attributes.get('_route') == 'app_company_create' %}active{% endif %}">
                            <a href="{{ path('app_company_create') }}">
                                <i class="fa fa-plus"></i>
                                Add company</a>
                        </li>
                    </ul>
                </li>
            {% endif %}

            {# Memberships #}
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <li class="treeview{% if app.request.attributes.get('_route') starts with 'app_membership' %} active{% endif %}">
                    <a href="#">
                        <i class="fa fa-user-circle-o"></i>
                        <span>Memberships</span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="{% if app.request.attributes.get('_route') == 'app_membership_index' %}active{% endif %}">
                            <a href="{{ path('app_membership_index') }}">
                                <i class="fa fa-list"></i>
                                List memberships</a>
                        </li>
                        <li class="{% if app.request.attributes.get('_route') == 'app_membership_create' %}active{% endif %}">
                            <a href="{{ path('app_membership_create') }}">
                                <i class="fa fa-plus"></i>
                                Add membership</a>
                        </li>
                    </ul>
                </li>
            {% endif %}

            {# Profiles #}
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <li class="treeview{% if app.request.attributes.get('_route') starts with 'app_profile' %} active{% endif %}">
                    <a href="#">
                        <i class="fa fa-users"></i>
                        <span>Profiles</span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="{% if app.request.attributes.get('_route') == 'app_profile_index' %}active{% endif %}">
                            <a href="{{ path('app_profile_index') }}">
                                <i class="fa fa-list"></i>
                                List profiles</a>
                        </li>
                        <li class="{% if app.request.attributes.get('_route') == 'app_profile_create' %}active{% endif %}">
                            <a href="{{ path('app_profile_create') }}">
                                <i class="fa fa-plus"></i>
                                Add profile</a>
                        </li>
                    </ul>
                </li>
            {% endif %}

            {# Contracts #}
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <li class="treeview{% if app.request.attributes.get('_route') starts with 'app_contract' %} active{% endif %}">
                    <a href="#">
                        <i class="fa fa-file-text-o"></i>
                        <span>Contracts</span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="{% if app.request.attributes.get('_route') == 'app_contract_index' %}active{% endif %}">
                            <a href="{{ path('app_contract_index') }}">
                                <i class="fa fa-list"></i>
                                List contracts</a>
                        </li>
                        <li class="{% if app.request.attributes.get('_route') == 'app_contract_create' %}active{% endif %}">
                            <a href="{{ path('app_contract_create') }}">
                                <i class="fa fa-plus"></i>
                                Add contract</a>
                        </li>
                    </ul>
                </li>
            {% endif %}

        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
