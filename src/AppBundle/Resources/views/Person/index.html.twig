{% extends 'AppBundle:AdminLTE:base.html.twig' %}

{% block body %}
    {% embed 'AppBundle:AdminLTE:_content.html.twig' %}
        {% block content %}
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">List of People</h3>
                </div>
                <div class="box-body">
                    <table id="people" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Pass Number</th>
                                <th>Company</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for person in people %}
                                <tr>
                                    <td>{{person.firstname}} {{person.lastname}}</td>
                                    <td>{{person.passnumber}}</td>
                                    <td>
                                        {% for company in person.companies %}
                                            <span class="label label-default">{{company.name}}</span>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <a class="btn btn-default btn-flat" href="{{ path('app_person_edit', {'person' : person.id}) }}">
                                            <i class="fa fa-fw fa-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger btn-flat" href="{{ path('app_person_delete', {'person' : person.id}) }}">
                                            <i class="fa fa-fw fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Pass Number</th>
                                <th>Company</th>
                                <th>Options</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="/js/datatables/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="/js/datatables/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $('#people').DataTable({
            "paging": true,
            "pageLength" : 25,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    </script>
{% endblock javascripts %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/datatables/dataTables.bootstrap.css">
{% endblock %}
