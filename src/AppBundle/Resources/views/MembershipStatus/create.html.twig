

{% extends 'AppBundle:AdminLTE:base.html.twig' %}

{# override default form_row() with custom class #}
{% form_theme form _self %}
{% block form_row -%}
    <div class="form-group row-condense{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        {{- form_errors(form) -}}
    </div>
{%- endblock form_row %}

{% block body %}
    {% embed 'AppBundle:AdminLTE:_content.html.twig' %}
        {% block content %}
            <div class="row">

                <div class="col-md-6">

                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Create new Membership Status</h3>
                        </div>

                        {{form_start(form)}}
                        <div class="box-body">
                            {{ form_widget(form)}}
                            <div class="form-group row row-condense">
                                <div class="col-md-6">
                                </div>
                                <div class="col-md-6">
                                </div>
                            </div>
                            <div class="form-group row row-condense">
                                <div class="col-md-6">
                                </div>
                                <div class="col-md-6">
                                </div>
                            </div>
                            <div class="form-group row row-condense">
                                <div class="col-md-6">

                                </div>
                                <div class="col-md-6">

                                </div>
                            </div>

                            <div class="form-group pull-right">
                                {{form_widget(form.save)}}
                            </div>
                        </div>
                        {{form_end(form)}}
                    </div>

                </div>
                <div class="col-md-6"></div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
