

{% extends 'AppBundle:AdminLTE:base.html.twig' %}

{# override default form_row() with custom class #}
{% form_theme form _self %}
{% block form_row -%}
    <div class="form-group row-condense{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
        {{- form_errors(form) -}}
    </div>
{%- endblock form_row %}

{% block body %}
    {% embed 'AppBundle:AdminLTE:_content.html.twig' %}
        {% block content %}
            <div class="row">

                <div class="col-md-6">

                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Card edit</h3>
                        </div>

                        {{form_start(form)}}
                        <div class="box-body">
                            <div class="form-group">
                                {{form_row(form.number)}}
                            </div>
                            <div class="form-group">
                                {{form_row(form.status)}}
                            </div>

                            {% if card.membership != null %}
                            <div class="form-group">
                                Card bound to: <a href="{{ path('app_membership_edit', {'membership' : card.membership.id}) }}">
                                    {{ card.membership.firstName ?? null }} {{ card.membership.lastName ?? null }}
                                </a>
                            </div>
                            {% endif %}
                            <div class="form-group">
                                {{form_label(form.roles)}}
                                {{form_widget(form.roles, {'attr': {'class': 'select2'}})}}
                            </div>
                            <div class="form-group pull-right">
                                {{form_widget(form.save)}}
                            </div>
                        </div>
                        {{form_end(form)}}
                    </div>

                </div>
                <div class="col-md-6"></div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/js/select2/select2.full.min.js"></script>
    <script>
        $(".select2").select2({
            sorter: function(data) {
                return data.sort(function(a, b) {
                    if (a.text > b.text) {
                        return 1;
                    }
                    if (a.text < b.text) {
                        return -1;
                    }
                    return 0;
                });
            }
        });
    </script>
{% endblock javascripts %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/select2/select2.min.css">
    {{ parent() }}
{% endblock %}