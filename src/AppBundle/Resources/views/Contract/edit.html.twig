{% extends 'AppBundle:AdminLTE:base.html.twig' %}

{% block body %}
    {% embed 'AppBundle:AdminLTE:_content.html.twig' %}
        {% block content %}
            <div class="row">

                <div class="col-md-6">

                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Editting "{{profile.firstName}}"</h3>
                        </div>
                        {{form_start(form)}}
                        <div class="box-body">
                            <div class="form-group">
                                {{form_row(form.firstName)}}
                            </div>
                            <div class="form-group">
                                {{form_row(form.lastName)}}
                            </div>
                            <div class="form-group">
                                {{form_row(form.passNumber)}}
                            </div>
                            <div class="form-group">
                                {{form_label(form.companies)}}
                                {{form_widget(form.companies, {'attr': {'class': 'select2'}})}}
                            </div>
                            <div class="form-group pull-right">
                                {{form_widget(form.save)}} {{form_widget(form.saveAndQuit, {'attr': {'class': 'btn-primary'}})}}
                            </div>
                        </div>
                        {{form_end(form)}}
                    </div>

                </div>
                <div class="col-md-6"></div>
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/js/select2/select2.full.min.js"></script>
    <script>
        $(".select2").select2({
            sorter: function(data) {
                return data.sort(function(a, b) {
                    if (a.text > b.text) {
                        return 1;
                    }
                    if (a.text < b.text) {
                        return -1;
                    }
                    return 0;
                });
            }
        });
    </script>
{% endblock javascripts %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/select2/select2.min.css">
    {{ parent() }}
{% endblock %}
