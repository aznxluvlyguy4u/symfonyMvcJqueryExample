{% extends 'AppBundle:AdminLTE:base.html.twig' %}

{% block body %}
    {% embed 'AppBundle:AdminLTE:_content.html.twig' %}
        {% block content %}

            {% for companyStatus in companyStatuses %}
                <div class="row">
                    <div class="col-xs-12">

                        <div class="box box-solid">
                            <div class="box-header with-border">
                                <h3 class="box-title">{{companyStatus.label}}</h3>
                            </div>
                            <div class="box-body">
                                <div class="row">
                                    {% for company in companies[companyStatus.label] %}
                                        <div class="col-xs-12 col-md-2">
                                            <h5>{{company.name}}</h5>
                                            <p>
                                                {{company.statuschangedate|time_diff}}
                                            </p>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            {% endfor %}

        {% endblock %}
    {% endembed %}
{% endblock %}
