<div class="row">
    <div class="col-md-4">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Recently Added Comments</h3>
            </div>
            <div class="box-body">
                <ul class="products-list product-list-in-box">
                    {% for comment in comments %}
                        <li class="item">
                            <blockquote>
                                <a class="product-title" href="{{path('app_company_edit', {'company' : comment.company.id})}}">{{comment.company.name}}</a>
                                {{comment.text|raw}}
                                <small>
                                    {{comment.createdBy.username}}
                                    @
                                    {{comment.createdAt|date('Y-m-d H:i')}}
                                </small>
                            </blockquote>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="box-footer text-center">
                <a class="uppercase" href="{{path('app_company_index')}}">View all companies</a>
            </div>
        </div>
    </div>
    <div class="col-md-8"></div>
</div>
