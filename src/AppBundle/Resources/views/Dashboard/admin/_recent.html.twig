<div class="row">
    <div class="col-md-4">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Recently Added Comments</h3>
            </div>
            <div class="box-body">
                {% for comment in comments %}
                    <blockquote>
                        {% if comment.className == 'CompanyComment' %}
                            <a class="product-title" href="{{path('app_company_edit', {'company' : comment.company.id})}}">Lead {{comment.company.companyName}}</a>
                        {% elseif comment.className == 'MembershipComment' %}
                            <a class="product-title" href="{{path('app_membership_edit', {'membership' : comment.membership.id})}}">Member {{comment.membership.company.companyName}}</a>
                        {% endif %}
                        {{comment.text|raw}}
                        <small>
                            {{comment.createdBy.username}}
                            @
                            {{comment.createdAt|date('Y-m-d H:i')}}
                        </small>
                    </blockquote>
                {% endfor %}
            </div>
            <div class="box-footer text-center">
                <a class="uppercase" href="{{path('app_company_index')}}">View all companies</a>
            </div>
        </div>
    </div>
    <div class="col-md-8"></div>
</div>
